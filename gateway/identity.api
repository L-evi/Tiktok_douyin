syntax = "v1"

info (
	title: "identify"
	desc: "user identify file"
)

type loginReq {
	Username string `form:"username,optional"`
	Password string `form:"password,optional"`
}


type registerReq {
	Username string `form:"username,optional"`
	Password string `form:"password,optional"`
}


@server(
	group: identity
)
service gateway {
	@handler register
	post /douyin/user/register (registerReq)
	
	@handler login
	post /douyin/user/login (loginReq)
}